.big_box{
    width:710rpx; 
    display: flex;
    justify-content: space-between;
    padding: 0 20rpx;
    flex-wrap: wrap;
}
.core_item{
    width: 340rpx;
    margin-bottom: 30rpx;
    text-align: center;
    border: 1px solid #f1f1f1
}
.core_item image{
    width: 340rpx;
    height: 500rpx;
    border: none;
}
.core_item text{
    font-size: 13px;
    color: #5a5a5a;
    border: none;
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 300rpx;
    line-height: 36rpx;
}
.item_button{
  display: flex;
  justify-content: space-between;
  margin: 0;
  padding: 16rpx 16rpx 24rpx 16rpx;
}
.item_button button{
  height:50rpx;
  margin:0;
  line-height:50rpx;
  text-align:center;
  background:#e9e9e9;
  border-radius:10rpx;
  border:none;
  font-size:12px;
  color:#333;
}

/* 上拉过渡动画 */
.loadmore {
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  color: #555;
}

.loadmore image {
  width: 50rpx;
  height: 50rpx;
}

.loadmore text {
  line-height: 50rpx;
  height: 50rpx;
  padding-left: 20rpx;
}

.no-more {
  position: relative;
  line-height: 120rpx;
  height: 120rpx;
  text-align: center;
  background: #f1f1f1;
  font-size: 14px;
  color: #9e9e9e;
}

.no-more text {
  position: relative;
  z-index: 998;
  padding: 0 20rpx;
  background: #f1f1f1;
}

.no-more .line {
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 0;
  transform: translate(-50%, -50%);
  width: 500rpx;
  height: 1rpx;
  background: #ccc;
}